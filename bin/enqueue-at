#!/bin/sh

# exit early if there are no CREATEd files
perl -e 'exit 1 unless scalar grep m/^CREATE/, @ARGV' "$@" || exit

cd ~/Dropbox/notes/.alerts

for file in $(ls); do
   ts="$(echo "$file" | cut -f1 -d_)"
   contents=$(cat "$file")

   echo "wuphf $contents" | at $(date -d "$ts" '+%H:%M %Y-%m-%d')
   rm "$file"
done
